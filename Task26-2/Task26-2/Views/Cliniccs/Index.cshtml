@model IEnumerable<Task26_2.Models.Clinicc>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ClinicName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Clinicimg)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ClinicName)
            </td>
            <td>
                    <img src="~/images/@item.Clinicimg" alt="Uploaded Image" style="width:50px; height:50px">
                </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ClinicId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ClinicId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ClinicId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
